!!! 5
%html
  %head
    %title= config.title
    %meta(charset='utf-8')/
    %meta{name: 'copyright', content: "Copyright (C) #{copyright = [2012, Date.today.year].uniq.join(' -')} #{config.author}"}/
    %meta{name: "author", content: config.author}/
    %meta{name: "robots", content: "index,follow"}/
    %meta{name: "apple-mobile-web-app-capable", content: :yes}/
    %meta{name:" apple-mobile-web-app-status-bar-status", content: "black-translucent"}/
    %link{href: "/stylesheets/reveal.min.css", rel: :stylesheet}/
    %link{href: "/stylesheets/themes/#{config.theme}.css", id: :theme, rel: :stylesheet}/
    %link{href: "/stylesheets/colorschemes/zenburn.css", rel: :stylesheet}/
    :javascript
      document.write( '<link rel="stylesheet" href="/stylesheets/print/' + ( window.location.search.match( /print-pdf/gi ) ? 'pdf' : 'paper' ) + '.css" type="text/css" media="print">' );
    /[if lt IE9]
      %script{src: "/javascripts/html5shiv.js", type: "text/javascript"}
    %link{href: "/presentation.css", rel: :stylesheet}/
    -#%link{href: '/favicon.ico', rel: 'shortcut icon', type: 'image/x-icon'}
  %body
    .reveal
      .slides
        - begin
          = partial('slides.haml')
        - rescue Errno::ENOENT
          - slides.each do |slide_path|
            = slide(slide_path)
  %script{src: "/javascripts/head.min.js", type: "text/javascript"}
  %script{src: "/javascripts/reveal.min.js", type: "text/javascript"}
  %script{src: "/config.js", type: "text/javascript"}
  %script{src: "/presentation.js", type: "text/javascript"}
